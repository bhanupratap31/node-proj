doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    meta(
      content="ie=edge" 
      http-equiv="X-UA-Compatible"
      )
    title Add Product
    link(
      href="/css/main.css" 
      rel="stylesheet"
      )
    link(
      href="/css/forms.css" 
      rel="stylesheet"
      )
    link(
      href="/css/product.css" 
      rel="stylesheet"
      )
  body
    header.main-header
      nav(class="main-header__nav")
        ul(class="main-header__item-list")
          li(class="main-header__item")
            a(href="/") Shop
          li(class="main-header__item")
            a.active(href="/admin/add-product") Add Product
    main
      form.product-form(
        method="POST" 
        action="/admin/add-product"
        )
        .form-control
          label(for="title") Title
          input#title(
            name="title" 
            type="text"
            )
        button.btn(type="submit") Add Product